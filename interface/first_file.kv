#:kivy 2.1.0
#:import Factory kivy.factory.Factory

# --
<LabelFont@Label>:
    font_name: 'data/Gabriela-Regular.ttf'
# --
<ButtonFont@Button>:
    font_name: 'data/Gabriela-Regular.ttf'
    background_color: (177/255, 133/255, 219/255, 1)
# --
<LabelLogin@Label>:
    font_name: 'data/Gabriela-Regular.ttf'

    canvas.before:
        Color:
            rgba: 255, 255, 255, 0
        Rectangle:
            pos: self.pos
            size: self.size
# --
<LabelCadastro@Label>:
    font_name: 'data/Gabriela-Regular.ttf'

    canvas.before:
        Color:
            rgba: 255, 255, 255, 0
        Rectangle:
            pos: self.pos
            size: self.size    

# --
<InputCadastro@TextInput>:
    multiline: False
    write_tab: False
# --
<PopupCreditos@Popup>:
    
    size_hint: None, None
    size: 400, 400
    title: 'Créditos'
    LabelFont:
        text: 'Em Construção...'
        #color: 0,0,0,0
        bold: 1
        font_size: 45
# --
<PopupInterrogacao@Popup>:
    size_hint: None, None
    size: 600, 200
    title: 'Ética TroCat'
    background: 'data/violetBack.png'
    title_color: (0, 0, 0, 1)
    title_font: 'data/Gabriela-Regular.ttf'
    LabelFont:
        text: 'Este trabalho foi aprovado pela Comissão de Ética no uso de Animais na UFV.'
        color: (0,0,0,1)
        bold: 1
        font_size: 15